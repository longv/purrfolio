---
import { Icon } from "astro-icon/components";
import SpriteAnimator from "@components/animation/SpriteAnimator.astro";

const { icon = "vscode-icons:file-type-yarn", title = "Title" } = Astro.props;
---

<div class="relative pt-10">
  <div class="absolute -left-[64px] -top-[92px]">
    <SpriteAnimator />
  </div>
  <div
    class="max-w-sm rounded-xl border border-gray-200 bg-white p-6 shadow dark:border-gray-700 dark:bg-gray-800"
  >
    <div class="flex flex-row content-center gap-3">
      <Icon class="h-12 w-12" name={icon} />
      <h5
        class="content-center text-3xl font-semibold tracking-tight text-gray-900 dark:text-white"
      >
        {title}
      </h5>
    </div>
    <p class="mt-6 font-normal text-black dark:text-gray-400">
      <slot />
    </p>
  </div>
</div>
