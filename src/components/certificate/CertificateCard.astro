---
import { Icon } from "astro-icon/components";

interface Props {
  icon: string;
  url: string;
  title: string;
  description: string;
  date: string;
}

const {
  icon = "vscode-icons:file-type-yarn",
  url = "#",
  title = "title",
  description = "description",
  date = "dd-mm-yyyy",
} = Astro.props;
---

<a
  href={url}
  class:list={[
    "max-w-sm flex flex-col items-center rounded-lg border border-gray-200 bg-white p-5 shadow hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700 md:max-w-xl md:flex-row",
    "transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 duration-300",
  ]}
>
  <Icon class="h-12 w-12" name={icon} />
  <div class="flex flex-col justify-between px-4 leading-normal">
    <h5 class="text-xl font-bold tracking-tight text-gray-900 dark:text-white">
      {title}
    </h5>
    <p class="font-normal text-gray-700 dark:text-gray-400">
      {description}
    </p>
    <p class="font-normal text-gray-700 dark:text-gray-400">
      {date}
    </p>
  </div>
</a>
