---
import CertificateCard from "@components/certificate/CertificateCard.astro";
import SpriteAnimator from "@components/animation/SpriteAnimator.astro";
import PinkPlayingSpriteSheet from "@assets/sprites/pink-playing.png";

const { ...props } = Astro.props;
---

<section {...props} class="mb-36">
  <div class="container">
    <div class="relative flex w-fit flex-row">
      <h2 class="mb-16 text-6xl">Recent achievements</h2>
      <SpriteAnimator
        class="absolute -right-52 -top-[87px]"
        slot="sprite"
        src={PinkPlayingSpriteSheet}
        totalFrames={8}
      />
    </div>
    <div class="grid grid-cols-1 gap-12 md:grid-cols-2 lg:grid-cols-2">
      <CertificateCard
        icon="logos:coursera"
        url="https://coursera.org/share/599be3206ac3a781d5a47e00c4e864a4"
        title="Story and Narrative Development for Video Games"
        description="California Institute of the Arts"
        date="Apr 2024"
      />
      <CertificateCard
        icon="logos:coursera"
        url="https://coursera.org/share/2e8a5910446ff42c109ccbdb6232cca7"
        title="Introduction to Game Design"
        description="California Institute of the Arts"
        date="Mar 2024"
      />
      <CertificateCard
        icon="logos:udacity-icon"
        url="https://github.com/longv/certificate/blob/master/udacity-cpp-nanodegree.pdf"
        title="C++ Nanodegree Program"
        description="Udacity"
        date="2020 - 2021"
      />
      <CertificateCard
        icon="junction"
        url="https://github.com/longv/certificate/blob/master/Junction20_1st_RunnerUp_LongVu.pdf"
        title="Junction 2020 1st Runner Up"
        description='"Where to eat with my hacker team" Optimizer'
        date="Nov 2020"
      />
    </div>
  </div>
</section>
